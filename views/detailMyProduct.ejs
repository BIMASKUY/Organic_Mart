<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Detail My Product</h1>
</div>
<!-- Single Page Header End -->

<!-- Checkout Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
        <form action="/myProduct/<%=result.id%>" method="post">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="form-item">
                        <label class="form-label my-3">Name <sup>*</sup></label>
                        <input class="form-control" type="text" name="name" value="<%=result.name%>" disabled>
                    </div>
                    
                    <div class="form-item">
                        <label class="form-label my-3">Category <sup>*</sup></label>
                        <td colspan="3" class="py-5">
                            <div class="form-check text-start">
                                <input type="radio" class="form-check-input bg-primary border-0" id="Shipping-1" name="category" value="fruit" <%= result.category === 'fruit' ? 'checked' : '' %> disabled>
                                <label class="form-check-label" for="Shipping-1">Fruit</label>
                            </div>
                            <div class="form-check text-start">
                                <input type="radio" class="form-check-input bg-primary border-0" id="Shipping-2" name="category" value="vegetable" <%= result.category === 'vegetable' ? 'checked' : '' %> disabled>
                                <label class="form-check-label" for="Shipping-2">Vegetable</label>
                            </div>
                            <div class="form-check text-start">
                                <input type="radio" class="form-check-input bg-primary border-0" id="Shipping-3" name="category" value="meat" <%= result.category === 'meat' ? 'checked' : '' %> disabled>
                                <label class="form-check-label" for="Shipping-3">Meat</label>
                            </div>
                        </td>                        
                    </div>

                    <div class="form-item">
                        <label class="form-label my-3">Price <sup>*</sup></label>
                        <input type="number" class="form-control" name="price" value="<%=result.price%>">
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Quantity <sup>*</sup></label>
                        <input type="number" class="form-control" name="quantity" value="<%=result.quantity%>">
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Weight <sup>*</sup></label>
                        <div class="d-flex">
                            <input type="number" class="form-control me-3" name="weight" value="<%=result.weight%>">
                            <select class="form-select" name="unit">
                                <option value="g" <%= result.unit === 'g' ? 'selected' : '' %>>g</option>
                                <option value="kg" <%= result.unit === 'kg' ? 'selected' : '' %>>kg</option>
                            </select>                            
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Exp Date <sup>*</sup></label>
                        <input type="date" class="form-control" name="exp" value="<%=result.exp%>">
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Location <sup>*</sup></label>
                        <input type="text" class="form-control" name="location" value="<%=result.location%>">
                    </div>
                    <hr>
                    <div class="form-item">
                        <textarea name="description" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Description"><%=result.description%></textarea>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <div class="table-responsive">
                        <div class="border border-primary rounded position-relative vesitable-item">
                            <div class="vesitable-img">
                                <img src="/img/<%=result.filename%>" class="img-fluid w-100 rounded-top" alt="ini gambar">
                            </div>
                            <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;"><%=result.category%></div>

                            <div class="p-4 rounded-bottom text-md-end">
                                <input type="file" name="namaFile" accept="image/*" class="btn border border-secondary rounded-pill px-3 text-primary" disabled>
                                <i class="fa fa-shopping-bag me-2 text-primary">Image Cant Be Changed</i>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->