<!-- Vesitable Shop Start-->
<div class="container-fluid vesitable py-5">
    <div class="container py-5">
        <h1 class="mb-0">Our Product</h1>
        <div class="owl-carousel vegetable-carousel justify-content-center">
            
            <% for(let i=0; i<resultOur.length; i++){ %>
            <div class="border border-primary rounded position-relative vesitable-item">
                <div class="vesitable-img">
                    <img src="img/<%= resultOur[i].filename %>" class="img-fluid w-100 rounded-top" alt="">
                </div>
                <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;"><%= resultOur[i].category %></div>
                <div class="p-4 rounded-bottom">
                    <h4><%= resultOur[i].name %></h4>
                    <p><%= resultOur[i].description %></p>
                    <div class="d-flex justify-content-between flex-lg-wrap">
                        <a href="/shop/<%= resultOur[i].id %>" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="bi bi-eye-fill me-2 text-primary"></i> View</a>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
    </div>
</div>
<!-- Vesitable Shop End -->

