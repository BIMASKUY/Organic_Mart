<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">My Product</h1>
</div>
<!-- Single Page Header End -->


<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">Products</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Sold</th>
                    <th scope="col">Exp</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody id="deleteProductButton">

                    <% for(let i=0; i<result.length; i++){ %>
                    <tr>
                        <th scope="row">
                            <div class="d-flex align-items-center">
                                <img src="img/<%=result[i].filename%>" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                            </div>
                        </th>
                        <td>
                            <p class="mb-0 mt-4"><%=result[i].name%></p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">Rp<%=result[i].price.toLocaleString('de-DE')%></p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4"><%=result[i].quantity%></p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4"><%=result[i].sold%></p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4"><%=result[i].exp%></p>
                        </td>
                        <td>
                            <a href="/myProduct/<%=result[i].id%>" class="btn btn-md rounded-circle bg-light border mt-4" >
                                <i class="bi bi-pen-fill text-primary"></i>
                            </a>
                            
                            <form action="/deleteProduct/<%=result[i].id%>" method="post" class="btn btn-md rounded-circle bg-light border mt-4 bg-light">
                                <i class="fa fa-times text-danger"></i>
                            </form>
                        </td>
                    </tr>

                    <% } %>
                    
                </tbody>
            </table>
        </div>
            <div class="p-4 text-md-end">
                <a href="/addProduct" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">Add Product</a>
            </div>
        <b>*Biaya Jasa OrganicMart: 20% Harga Barang</b>
        </div>
    </div>
</div>
<!-- Cart Page End -->