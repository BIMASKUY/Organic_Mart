        <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Shop</h1>
        </div>
        <!-- Single Page Header End -->

        <!-- Fruit Shop Start-->
        <div class="container-fluid fruite py-5">
            <div class="container py-5">
                <div class="tab-class text-center">
                    <div class="row g-4">
                        <h1>Our Organic Products</h1>
                            <ul class="nav nav-pills d-inline-flex text-center mb-5">
                                <li class="nav-item">
                                    <a class="d-flex m-2 py-2 bg-light rounded-pill <%= (!category) ? 'active' : '' %>"  href="?search=<%=search%>">
                                        <span class="text-dark" style="width: 130px;">All Products</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="d-flex py-2 m-2 bg-light rounded-pill <%= (category == 'Vegetable') ? 'active' : '' %>"  href="?category=Vegetable&search=<%=search%>">
                                        <span class="text-dark" style="width: 130px;">Vegetable</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="d-flex m-2 py-2 bg-light rounded-pill <%= (category == 'Fruit') ? 'active' : '' %>" href="?category=Fruit&search=<%=search%>">
                                        <span class="text-dark" style="width: 130px;">Fruit</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="d-flex m-2 py-2 bg-light rounded-pill <%= (category == 'Meat') ? 'active' : '' %>" href="?category=Meat&search=<%=search%> ">
                                        <span class="text-dark" style="width: 130px;">Meat</span>
                                    </a>
                                </li>
                                <form action="/shop" method="get" class="position-relative mx-auto col-4">
                                    <input type="hidden" name="category" value="<%=category%>">
                                    <input name="search" class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="text" placeholder="Search" autocomplete="off" autofocus onfocus="const temp_value=this.value; this.value=''; this.value=temp_value" value="<%=search%>">
                                    <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;"><i class="fas fa-search"></i></button>
                                </form>
                            </ul>
                    </div>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="row g-4">

                                        <% for(let i=0; i<result.length; i++) { %>
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <img src="img/<%=result[i].filename%>" class="img-fluid w-100 rounded-top" alt="">
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;"><%=result[i].category%></div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4><%=result[i].name%></h4>
                                                    <p><%=result[i].description%></p>
                                                    <div style="display: flex; justify-content: space-between;">
                                                        <p class="text-dark fs-5 mb-0"><%=result[i].sellername%></p>
                                                    </div>
                                                    <div style="display: flex; justify-content: space-between;">
                                                        <p class="text-dark fs-5 fw-bold mb-0"><%=result[i].quantity%> available</p>
                                                        <p class="text-dark fs-5 fw-bold mb-0"><%=result[i].sold%> sold</p>
                                                    </div>                                                    
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">Rp<%=result[i].price%></p>
                                                        <a href="/shop/<%=result[i].id%>" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="bi bi-eye-fill me-2 text-primary"></i> View</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
            
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div class="col-12">
                        <div class="pagination d-flex justify-content-center mt-5">
                            <% if(page > 1){ 
                                %><a href="?category=<%= category %>&search=<%= search %>&page=<%= page-1 %>" class="rounded">&laquo;</a> 
                            <% } %>
                            <% for(let i=left; i<=right; i++){ %>
                                <a href="?category=<%= category %>&search=<%= search %>&page=<%= i %>" class="<%= (i === page) ? 'active' : '' %> rounded"><%= i %></a>
                            <% } %>
                            <% if(page < numberOfPages){ %>
                                <a href="?category=<%= category %>&search=<%= search %>&page=<%= page+1 %>" class="rounded">&raquo;</a>
                            <% } %>
                        </div>
                    </div>
                </div>      
            </div>
        </div>
        <!-- Fruit Shop End-->