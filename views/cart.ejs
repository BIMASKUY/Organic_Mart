<%if(invalidMessage.length > 0){ %>
    <script>
        Swal.fire({
            title: "Failed Order",
            text: "<%= invalidMessage[0] %>",
            icon: "error"
        });
    </script>
<% } %>
    
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
</div>
<!-- Single Page Header End -->


<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">Products</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Exp</th>
                    <th scope="col">Total</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody id="deleteCartButton">
                    <% for(let i=0; i<result.length; i++){ %>
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="img/<%= result[i].filename %>" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4"><%= result[i].name %></p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">Rp<%= result[i].price.toLocaleString('de-DE') %></p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"><%= result[i].quantity %></p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"><%= result[i].exp %></p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">Rp <%= (result[i].price * result[i].quantity).toLocaleString('de-DE') %></p>
                            </td>
                            <td>

                                <a href="/cart/<%= result[i].id %>" class="btn btn-md rounded-circle bg-light border mt-4" >
                                    <i class="bi bi-pen-fill text-primary"></i>
                                </a>
                                
                                <form action="/deleteCart/<%= result[i].id %>" method="post" class="btn btn-md rounded-circle bg-light border mt-4 bg-light">
                                    <i class="fa fa-times text-danger"></i>
                                </form>

                            </td>
                        </tr>
                    <% } %>

                </tbody>
            </table>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <p class="display-5 mb-0 pe-4 me-4 text-dark fw-bold">Rp<%= cartTotal.toLocaleString('de-DE') %></p>
                    </div>
                    <a href="/checkout" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->